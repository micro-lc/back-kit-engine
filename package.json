{
  "name": "@micro-lc/back-kit-engine",
  "version": "0.17.8",
  "packageManager": "yarn@3.3.0",
  "files": [
    "dist",
    "schemas/*.json",
    "schemas/*.d.ts",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "cleanup": "rimraf dist node_modules coverage",
    "lint": "eslint . --ext .mjs,.js,.jsx,.ts,.tsx,.schema.json --resolve-plugins-relative-to .",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"CommonJS\" }' ts-mocha",
    "make-types": "ts-node ./scripts/make-types.ts",
    "build:types": "tsc --project ./scripts/tsconfig.types.json && echo 'âœ“ types'",
    "build:es": "ts-node ./scripts/compile.ts esm",
    "build:cjs": "ts-node ./scripts/compile.ts cjs",
    "build": "run-p make-types build:types build:es build:cjs",
    "postinstall": "husky install",
    "prepublish": "pinst --disable"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/eslint": "^8.4.10",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "@types/rimraf": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "ajv": "^8.11.2",
    "ajv-formats": "^2.1.1",
    "chai": "^4.3.7",
    "confusing-browser-globals": "^1.0.11",
    "esbuild": "^0.15.14",
    "eslint": "^8.27.0",
    "eslint-config-esnext": "^4.1.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsonc": "^2.5.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-n": "^15.5.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-typescript-sort-keys": "^2.1.0",
    "eslint-visitor-keys": "^3.3.0",
    "glob": "^8.0.3",
    "husky": "^8.0.2",
    "json-schema-to-typescript": "^11.0.2",
    "jsonc-eslint-parser": "^2.1.0",
    "lit": "^2.4.1",
    "mocha": "^10.1.0",
    "npm-run-all": "^4.1.5",
    "pinst": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "peerDependencies": {
    "lit": ">=2",
    "react": ">=18",
    "react-dom": ">=18"
  },
  "engines": {
    "node": ">=16.17.0"
  }
}
